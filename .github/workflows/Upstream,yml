name: 手动触发工作流

on:
  workflow_dispatch:  # 手动触发工作流

jobs:
  sync:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v2
      with:
        fetch-depth: 0

    - name: Set up Git
      run: |
        git config --global user.email "your-email@example.com"
        git config --global user.name "your-username"

    - name: Add upstream repository
      run: |
        git remote add upstream https://github.com/xiaorouji/openwrt-passwall.git
        git fetch upstream

    - name: Checkout luci-smartdns-dev branch
      run: |
        git checkout -b xiaorouji-luci-smartdns-dev origin/luci-smartdns-dev || git checkout luci-smartdns-dev

    - name: Merge upstream changes
      run: |
        git merge upstream/luci-smartdns-dev --allow-unrelated-histories || true

    - name: Push changes
      env:
        GH_PAT: ${{ secrets.GH_PAT }}
      run: |
        git push https://${{ secrets.GH_PAT }}@github.com/opamoy/openwrt-passwall.git luci-smartdns-dev || true

    - name: Handle merge conflicts
      if: failure()
      run: |
        git merge --abort
        echo "Automatic merge failed. Manual intervention required."
        exit 1
